{{header}}
{{column_left}}
<div id="content">
   <div class="page-header">
      <div class="container-fluid">
         <div class="pull-right">
            <button type="submit" form="form" data-toggle="tooltip" title="{{button_save}}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="{{cancel}}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"><i class="fa fa-reply"></i></a>
         </div>
         <h1>{{heading_title}}</h1>
         <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
         </ul>
      </div>
   </div>
   <div class="container-fluid">
      {% if error_warning %} 
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> 
         {{error_warning}}
         <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      {% endif %}
      <div class="panel panel-default">
         <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i>{{text_edit}}</h3>
         </div>
         <div class="panel-body">
            <form action="{{action}}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
               <ul class="nav nav-tabs">
                  <li class="nav-item active">
                     <a class="nav-link active" data-toggle="tab" href="#ocnp_main_settings">{{ocnp_text_main_settings}}</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link" data-toggle="tab" href="#ocnp_api_settings">{{ocnp_text_api_settings}}</a>
                  </li>
                  <li class="nav-item">
                     <a class="nav-link" data-toggle="tab" href="#ocnp_sync_settings">{{ocnp_text_sync_settings}}</a>
                  </li>
               </ul>
               <div class="tab-content">
                  <div class="tab-pane fade active in" id="ocnp_main_settings">
                     <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-field">{{entry_status}}</label>
                        <div class="col-sm-10">
                           <select class="form-control" name="shipping_ocnp_novaposhta_status">
                              {% if shipping_ocnp_novaposhta_status %}
                              <option value="1" selected="selected">{{text_enabled}}</option>
                              <option value="0">{{text_disabled}}</option>
                              {% else %}
                              <option value="1">{{text_enabled}}</option>
                              <option value="0" selected="selected">{{text_disabled}}</option>
                              {% endif %}
                           </select>
                        </div>
                     </div>
                     <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-field">{{ocnp_entry_sort_order}}</label>
                        <div class="col-sm-10">
                           <input class="form-control" type="text" name="shipping_ocnp_novaposhta_sort_order" value="{{shipping_ocnp_novaposhta_sort_order}}" size="1" />
                        </div>
                     </div>
                  </div>
                  <div class="tab-pane fade" id="ocnp_api_settings">
                     <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-field">{{ocnp_entry_api_url}}</label>
                        <div class="col-sm-10">
                           <input class="form-control" type="text" name="shipping_ocnp_novaposhta_api_url" value="{{shipping_ocnp_novaposhta_api_url}}" />
                           {% if error_shipping_ocnp_novaposhta_api_url %}
                           <div class="text-danger">{{error_shipping_ocnp_novaposhta_api_url}}</div>
                           {% endif %}
                        </div>
                     </div>
                     <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-field">{{ocnp_entry_api_key}}</label>
                        <div class="col-sm-10">
                           <input class="form-control" type="text" name="shipping_ocnp_novaposhta_api_key" value="{{shipping_ocnp_novaposhta_api_key}}" />
                           {% if error_shipping_ocnp_novaposhta_api_key %}<div class="text-danger">{{error_shipping_ocnp_novaposhta_api_key}}</div>{% endif %}
                        </div>
                     </div>
                  </div>
                  <div class="tab-pane fade" id="ocnp_sync_settings">
                     <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                           <thead>
                              <tr>
                                 <td class="text-center">{{ocnp_text_sync_table_type}}</td>
                                 <td class="text-center">{{ocnp_text_sync_table_date}}</td>
                                 <td class="text-center">{{ocnp_text_sync_table_count}}</td>
                                 <td class="text-center">{{ocnp_text_sync_table_desc}}</td>
                                 <td class="text-center">{{ocnp_text_sync_table_sync}}</td>
                              </tr>
                           </thead>
                           <tbody>
                              <tr>
                                 <td class="text-left">{{ocnp_text_sync_table_cities}}</td>
                                 <td class="text-center">{{ocnp_sync_table_cities_timestamp}}</td>
                                 <td class="text-center">{{ocnp_sync_table_cities_count}}</td>
                                 <td class="text-left">{{ocnp_text_sync_table_cities_desc}}</td>
                                 <td class="text-center">
                                    <a onclick="SyncCities()" class="btn btn-success"><i class="fa fa-refresh"></i></a>
                                 </td>
                              </tr>
                           </tbody>
                        </table>
                      </div>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
{{footer}}